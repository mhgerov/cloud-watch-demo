@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    
    <div class="mt-4">
        <h3>CloudWatch Logging Demo</h3>
        <p>Click the buttons below to trigger different log levels:</p>
        
        <div class="btn-group-vertical" role="group" aria-label="Logging buttons">
            <button type="button" class="btn btn-info mb-2" onclick="triggerLog('debug')">Trigger Debug Log</button>
            <button type="button" class="btn btn-success mb-2" onclick="triggerLog('info')">Trigger Info Log</button>
            <button type="button" class="btn btn-danger mb-2" onclick="triggerLog('error')">Trigger Error Log</button>
        </div>
        
        <div id="response" class="mt-3"></div>
    </div>
</div>